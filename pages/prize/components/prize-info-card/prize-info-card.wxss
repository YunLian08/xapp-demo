.preview-info-modal{
  position: fixed;
  height: 100vh;
  width: 100vw;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .7);
  z-index: 11;
  padding-left:80rpx;
  padding-right:80rpx;
  box-sizing: border-box;
  pointer-events: auto!important;
  overflow: auto;
}
/* 填写信息弹窗 */
.prize-information-madal{
  background:#FFFFFF;
  width:590rpx;
  max-height:847rpx;
  border-radius:18rpx 18rpx 16rpx 16rpx;
}
.info-bg-img{
  width:100%;
  height:184rpx;
}
.sculpture-pos{
  top:-38rpx;
  left:50%;
  transform: translateX(-50%);
  /* left:235rpx; */
}
.sculpture-img{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  overflow: hidden;
}
.info-main{
  padding:0 40rpx 40rpx;
  max-height:543rpx;
}
.info-item{
  width:100%;
  height:100rpx;
  border-bottom:1rpx solid #DDDDDD;
  /* box-shadow: inset 0 1rpx 0 0 #DDDDDD; */
}
.info-item:first-child{
  margin-top:-5rpx;
}
.info-item:last-child{
  margin-bottom:30rpx;
}
.get-code{
  width:140rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height:40rpx;
  color: #3976F0;
  right:2rpx;
}
.info-input-item{
  left:0;
  width:100%;
}
.info-item-placeholder{
  font-size:28rpx;
  line-height:40rpx;
  width:100%;
  color:#BDC4D7
}
.info-footer{
  width:100%;
  height:120rpx;
  background-color:#FFFFFF;
  border-radius:0 0 16rpx 16rpx;
}
.confirm-button{
  width:340rpx;
  height:80rpx;
  background: #3976F0;
  border-radius: 8px;
  font-size:32rpx;
  line-height:45rpx;
}
.g-mt-50{
  margin-top:50rpx;
}
.close-icon{
  width:60rpx;
  height:60rpx;
}
/* 提示弹窗 */
.toast-pop-madal{
  width:590rpx;
  height:370rpx;
  background:#FFFFFF;
  padding:94rpx 0 82rpx 0;
}
.success-img{
  width:100rpx;
  height:100rpx;
}
.success-text{
  font-size: 32rpx;
  line-height:45rpx;
  color: #051B4D;
  margin-top:48rpx;
}